@model ForumUi.Models.ForumStatsDto

@{
    ViewData["Title"] = "Admin Dashboard";
}

<h2>📊 Forum İstatistikleri</h2>

<div class="row">
    <div class="col-md-3">
        <div class="card text-white bg-primary mb-3">
            <div class="card-header">Toplam Kullanıcı</div>
            <div class="card-body">
                <h5 class="card-title">@Model.TotalUsers</h5>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-white bg-success mb-3">
            <div class="card-header">Toplam Konu</div>
            <div class="card-body">
                <h5 class="card-title">@Model.TotalTopics</h5>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-white bg-warning mb-3">
            <div class="card-header">Toplam Yanıt</div>
            <div class="card-body">
                <h5 class="card-title">@Model.TotalReplies</h5>
            </div>
        </div>
    </div>
    
</div>
